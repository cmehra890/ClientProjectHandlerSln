@model ClientProjectHandle_Entities.LoginAndSignup.LoginModel

@{
    ViewData["Title"] = "Login";

}

<div class="page-login">
    <div class="login-form" style="background-color: rgba(255,255,255,0.8);">
        <h2>Login</h2>
        <form asp-action="Index">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="mb-3">
                <label asp-for="UserName" class="control-label"></label>
                <input asp-for="UserName" class="form-control" />
                <span asp-validation-for="UserName" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="Password" class="control-label"></label>
                <input asp-for="Password" type="password" class="form-control" />
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>
            <button type="submit" class="btn btn-primary w-100">Login</button>
            <div class="mb-3">
                <a href="@Url.Action("Index","Client")" class="link-primary link-offset-2 link-underline-opacity-25 link-underline-opacity-100-hover">Go Back!</a>
            </div>
        </form>

    </div>
</div>



@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"></script>

